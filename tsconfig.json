{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/cabins/[cabinId]/page.jsx",
    "app/_components/HomeSlider.jsx",
    "app/_lib/auth.js",
    "app/_components/DateSelector.tsx",
    "app/_components/Reservation.tsx",
    "app/_context/ReservationContext.tsx",
    "app/account/reservated/page.jsx",
    "app/_lib/actions.js",
    "app/not-found.jsx"
  ],
  "exclude": ["node_modules"]
}
